<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.microsoft.jdbc.sqlserver.SQLServerDriver</property>
        <property name="hibernate.connection.password">tip</property>
        <property name="hibernate.connection.url">//localhost:1433;</property>
        <property name="hibernate.connection.username">Tip</property>
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        
    	<property name="hibernate.connection.pool_size">100</property>        
    	<property name="show_sql">false</property>

    	<!-- Mapping files 
    	<mapping resource="model.hbm.xml"/> 
    	<mapping resource="org.iringtools.mapping.TemplateMap.hbm.xml"/> -->
        <mapping resource="org/iringtools/mapping/TemplateMap.hbm.xml"/>
   
        
    </session-factory>
</hibernate-configuration>
